{
  "name": "rule-executer",
  "version": "0.1.0",
  "description": "Actio FRM Rule Executer",
  "main": "src/index.ts",
  "types": "build/index.d.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc --project tsconfig.json",
    "cleanup": "rm -rf build template jest.config.js jest.config.js.map node_modules package-lock.json",
    "start": "node -r dotenv/config build/index",
    "start:dev": "env $(cat .env.template) nodemon",
    "fix": "npm run fix:prettier && npm run fix:eslint",
    "fix:eslint": "eslint --fix \"**/*.ts\"",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"**/*.ts\"",
    "lint:prettier": "prettier --check \"**/*.ts\"",
    "prepare": "husky install",
    "test": "set STARTUP_TYPE=nats&&jest --config=jest.config.ts --passWithNoTests --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --config=jest.config.ts --watch"
  },
  "keywords": [],
  "contributors": [
    {
      "name": "Uche Akogwu",
      "email": "ucheakogwu@gmail.com"
    }
  ],
  "license": "ISC",
  "dependencies": {
    "@frmscoe/frms-coe-lib": "^0.1.29",
    "@frmscoe/frms-coe-startup-lib": "^0.0.11",
    "@log4js-node/logstash-http": "^1.1.0",
    "arangojs": "^8.3.0",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3",
    "elastic-apm-node": "^3.46.0",
    "koa": "2.14.2",
    "koa-bodyparser": "4.4.0",
    "koa-router": "12.0.0",
    "log4js": "^6.9.1",
    "node-cache": "^5.1.2",
    "rule": "npm:@frmscoe/rule-901@^1.0.2"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.1",
    "@types/jest": "^29.5.1",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^20.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "8.0.3",
    "ioredis-mock": "^8.7.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
